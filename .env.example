# Solana RPC Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_FALLBACK_RPC_1=https://solana-api.projectserum.com
SOLANA_FALLBACK_RPC_2=https://rpc.ankr.com/solana

# API Configuration
DEXSCREENER_API_URL=https://api.dexscreener.com/latest
RUGCHECK_API_URL=https://api.rugcheck.xyz/v1

# Trading Configuration
TRADING_ENABLED=false  # Set to true for live trading (DANGEROUS!)
MAX_POSITION_SIZE_USD=10  # Maximum position size in USD
MIN_SMART_MONEY_SCORE=0.8  # Minimum smart money score (0.0-1.0)
WALLET_ANALYSIS_INTERVAL=300  # Seconds between analysis cycles (300 = 5 min)

# Telegram Notifications
TELEGRAM_ENABLED=false  # Set to true to enable Telegram notifications
TELEGRAM_BOT_TOKEN=your_bot_token_here  # Get from @BotFather on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here  # Your Telegram user ID or group chat ID

# Web Dashboard
DASHBOARD_ENABLED=true  # Set to false to disable web dashboard
DASHBOARD_PORT=3000  # Port for the web dashboard

# Backtesting
BACKTEST_STARTING_CAPITAL=100  # Starting capital for backtest in USD
BACKTEST_POSITION_SIZE=10  # Position size for backtest in USD

# Logging
LOG_LEVEL=info  # debug, info, warn, error
