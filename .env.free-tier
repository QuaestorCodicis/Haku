# === SOLANA TRADING BOT - FREE TIER CONFIGURATION ===
# Copy this to .env and fill in your wallet key

# Solana RPC (Free public endpoints)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_FALLBACK_RPC_1=https://solana-api.projectserum.com
SOLANA_FALLBACK_RPC_2=https://rpc.ankr.com/solana
SOLANA_FALLBACK_RPC_3=https://solana.public-rpc.com
SOLANA_WS_URL=

# Your Wallet
# Generate with: cargo run --bin generate-wallet
WALLET_PRIVATE_KEY=

# Data Sources (All FREE - No Keys Required!)
JUPITER_API_URL=https://quote-api.jup.ag/v6
DEXSCREENER_API_URL=https://api.dexscreener.com/latest
RUGCHECK_API_URL=https://api.rugcheck.xyz/v1
HELIUS_API_KEY=
BIRDEYE_API_KEY=

# Database (SQLite - No Setup Required)
DATABASE_URL=sqlite:trading_bot.db
REDIS_URL=

# Trading Settings (START SAFE!)
TRADING_ENABLED=false
MIN_TRADE_INTERVAL_SECONDS=60
USE_JITO=false
JITO_TIP_LAMPORTS=0
DEFAULT_SLIPPAGE_BPS=100
PRIORITY_FEE_MICROLAMPORTS=5000

# Strategy (Conservative for Free Tier)
STRATEGY_MODE=SwingTrading
ADAPTIVE_MODE=false
MIN_SMART_MONEY_SCORE=0.8
MIN_WIN_RATE=70.0
MIN_TRADES_FOR_ANALYSIS=20
MAX_TRACKED_WALLETS=20
INSIDER_DETECTION_THRESHOLD=0.8
BUNDLE_DETECTION_THRESHOLD=0.85
TOKEN_ANALYSIS_INTERVAL=300
WALLET_ANALYSIS_INTERVAL=600

# Risk Management (START TINY!)
MAX_POSITION_SIZE_USD=10
MAX_POSITION_SIZE_PERCENTAGE=10.0
MAX_DAILY_LOSS_USD=5
MAX_DAILY_LOSS_PERCENTAGE=5.0
MAX_SLIPPAGE_BPS=100
MIN_LIQUIDITY_USD=10000
STOP_LOSS_PERCENTAGE=10.0
TAKE_PROFIT_PERCENTAGE=30.0

# Monitoring (Free Options)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
LOG_LEVEL=info
METRICS_ENABLED=false
METRICS_PORT=9090
